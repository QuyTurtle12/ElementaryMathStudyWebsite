@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.ChapterPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this chapter?</h3>
<div>
    <h4>Chapter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.Number)
        </dd>
        <dt class="col-sm-2">
            Chapter Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.ChapterName)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.Chapter.Status == true ? "Active" : "Deleted")
        </dd>
        <dt class="col-sm-2">
            Subject Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt class="col-sm-2">
            Quiz Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuizName)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedByName)
        </dd>
        <dt class="col-sm-2">
            Last Updated By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastUpdatedByName)
        </dd>
        <dt class="col-sm-2">
            Created Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.CreatedTime)
        </dd>
        <dt class="col-sm-2">
            Last Updated Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.LastUpdatedTime)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Chapter.DeletedBy))
        {
            <dt class="col-sm-2">
                Deleted By
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeletedByName)
            </dd>
            <dt class="col-sm-2">
                Deleted Time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Chapter.DeletedTime)
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Chapter.Id" />
        <div class="mt-3">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
            </div>
        </div>
    </form>
</div>