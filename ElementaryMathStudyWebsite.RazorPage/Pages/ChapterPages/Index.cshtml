@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.ChapterPages.IndexModel

@{
    ViewData["Title"] = "Trang chủ";
}
<h1>Trang chủ</h1>
<form method="get">
    <div class="form-group d-flex align-items-center gap-2">
        <div class="col-4">
            <input type="text" 
                   id="searchKeyword" 
                   name="SearchKeyword" 
                   value="@Model.SearchKeyword" 
                   class="form-control" 
                   placeholder="Enter keyword..." />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>
<div class="mb-3 mt-3">
    <a asp-page="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Tạo mới
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Số thứ tự
            </th>
            <th>
                Tên chương
            </th>
            <th>
                Tên câu hỏi
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chapter.OrderBy(c => c.Number))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Number)</td>
                <td>@Html.DisplayFor(modelItem => item.ChapterName)</td>
                <td>@Html.DisplayFor(modelItem => item.QuizName)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info me-2">
                            <i class="fas fa-info-circle"></i> Chi tiết
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-controls d-flex justify-content-center align-items-center mt-3">
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index" asp-route-SearchKeyword="@Model.SearchKeyword" asp-route-pageNumber="@(Model.CurrentPage - 1)" class="btn btn-secondary">Previous</a>
    }
    <span>Page @Model.CurrentPage of @Model.TotalPages</span>
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index" asp-route-SearchKeyword="@Model.SearchKeyword" asp-route-pageNumber="@(Model.CurrentPage + 1)" class="btn btn-secondary">Next</a>
    }
</div>