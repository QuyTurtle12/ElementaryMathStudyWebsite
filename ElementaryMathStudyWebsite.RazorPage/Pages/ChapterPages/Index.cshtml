@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.ChapterPages.IndexModel

@{
    ViewData["Title"] = "Danh sách chương";
    var isFromSubject = !string.IsNullOrEmpty(Model.SubjectId);
}

<h1>
    Danh sách chương
    @if (ViewData["SubjectName"] != null)
    {
        <small class="text-muted">- Môn @ViewData["SubjectName"]</small>
    }
</h1>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let timeoutId;
            
            // Xử lý tìm kiếm real-time
            $("#searchKeyword").on('input', function () {
                clearTimeout(timeoutId);
                const keyword = $(this).val();
                const subjectId = $("#subjectId").val();

                // Đợi người dùng ngừng gõ 300ms mới thực hiện tìm kiếm
                timeoutId = setTimeout(function() {
                    performSearch(keyword, subjectId);
                }, 300);
            });

            // Xử lý khi click nút tìm kiếm
            $("#searchForm").on('submit', function(e) {
                e.preventDefault();
                const keyword = $("#searchKeyword").val();
                const subjectId = $("#subjectId").val();
                performSearch(keyword, subjectId);
            });
        });

        function performSearch(keyword, subjectId) {
            $.get('/ChapterPages/Index', {
                handler: 'search',
                searchKeyword: keyword,
                subjectId: subjectId
            })
            .done(function (data) {
                $("#chapterTableBody").html(data);
                updatePagination();
            });
        }

        function updatePagination() {
            $.get('/ChapterPages/Index', {
                handler: 'pagination'
            })
            .done(function (data) {
                $("#paginationContainer").html(data);
            });
        }
    </script>
}

<!-- Form tìm kiếm với button -->
<form method="get" class="mb-4" id="searchForm">
    <div class="form-group d-flex align-items-center gap-2">
        <div class="col-4">
            <input type="text" 
                   id="searchKeyword" 
                   name="SearchKeyword" 
                   value="@Model.SearchKeyword" 
                   class="form-control" 
                   placeholder="Nhập để tìm kiếm..." 
                   autocomplete="off" />
            @if (isFromSubject)
            {
                <input type="hidden" id="subjectId" name="SubjectId" value="@Model.SubjectId" />
            }
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Tìm kiếm
        </button>
    </div>
</form>

@if (!isFromSubject)
{
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Tạo mới
        </a>
    </div>
}

@if (Model.Chapters.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Số thứ tự</th>
                <th>Tên chương</th>
                @if (!isFromSubject)
                {
                    <th>Tên môn học</th>
                }
                <th>Tên câu hỏi</th>
                @if (!isFromSubject)
                {
                    <th>Thao tác</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Chapters)
            {
                <tr>
                    <td>@item.Number</td>
                    <td>@item.ChapterName</td>
                    @if (!isFromSubject)
                    {
                        <td>
                            @item.SubjectName
                        </td>
                    }
                    <td>@item.QuizName</td>
                    @if (!isFromSubject)
                    {
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info me-2">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            Tổng số: @Model.TotalItems chương
        </div>
        <div class="d-flex gap-3 align-items-center">
            @if (Model.CurrentPage > 1)
            {
                <a asp-page="./Index" 
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   asp-route-searchKeyword="@Model.SearchKeyword"
                   asp-route-subjectId="@Model.SubjectId"
                   class="btn btn-secondary">
                    <i class="fas fa-chevron-left"></i> Trang trước
                </a>
            }
            <span>
                Trang @Model.CurrentPage / @Model.TotalPages
            </span>
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a asp-page="./Index" 
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   asp-route-searchKeyword="@Model.SearchKeyword"
                   asp-route-subjectId="@Model.SubjectId"
                   class="btn btn-secondary">
                    Trang sau <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        Không tìm thấy chương nào.
    </div>
}

@if (isFromSubject)
{
    <div class="mb-3">
        <a asp-page="/SubjectPages/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách môn học
        </a>
    </div>
}