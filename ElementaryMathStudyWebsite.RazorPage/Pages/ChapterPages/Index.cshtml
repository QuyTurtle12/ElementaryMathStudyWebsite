@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.ChapterPages.IndexModel

@{
    ViewData["Title"] = "Danh sách chương";
    var isFromSubject = !string.IsNullOrEmpty(Model.SubjectId);
}

<h1>
    Danh sách chương
    @if (ViewData["SubjectName"] != null)
    {
        <small class="text-muted">- Môn @ViewData["SubjectName"]</small>
    }
</h1>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let searchTimeout;
            
            // Xử lý tìm kiếm realtime
            $("#searchKeyword").on('input', function () {
                clearTimeout(searchTimeout);
                
                // Đợi người dùng ngừng gõ 500ms
                searchTimeout = setTimeout(() => {
                    performSearch(1);
                }, 500);
            });

            // Xử lý form submit
            $("#searchForm").on('submit', function(e) {
                e.preventDefault();
                performSearch(1);
            });
        });

        function performSearch(page) {
            $.ajax({
                url: window.location.pathname,
                data: {
                    handler: 'search',
                    pageNumber: page,
                    searchKeyword: $("#searchKeyword").val(),
                    subjectId: $("#subjectId").val()
                },
                success: function(response) {
                    $("#chapterTableBody").html(response);
                    updatePagination(page);
                },
                error: function(error) {
                    console.error('Search error:', error);
                }
            });
        }

        function updatePagination(page) {
            $.ajax({
                url: window.location.pathname,
                data: {
                    handler: 'pagination',
                    pageNumber: page,
                    searchKeyword: $("#searchKeyword").val(),
                    subjectId: $("#subjectId").val()
                },
                success: function(response) {
                    $("#paginationContainer").html(response);
                },
                error: function(error) {
                    console.error('Pagination error:', error);
                }
            });
        }

        function changePage(page) {
            performSearch(page);
        }
    </script>
}

<!-- Form tìm kiếm với button -->
<form method="get" class="mb-4" id="searchForm">
    <div class="form-group d-flex align-items-center gap-2">
        <div class="col-4">
            <input type="text" 
                   id="searchKeyword" 
                   name="SearchKeyword" 
                   value="@Model.SearchKeyword" 
                   class="form-control" 
                   placeholder="Enter to search..." 
                   autocomplete="off" />
            @if (isFromSubject)
            {
                <input type="hidden" id="subjectId" name="SubjectId" value="@Model.SubjectId" />
            }
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>

@if (!isFromSubject)
{
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create
        </a>
    </div>
}

@if (Model.Chapters.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Chapter Name</th>
                @if (!isFromSubject)
                {
                    <th>Subject Name</th>
                }
                <th>Quiz Name</th>
                @if (!isFromSubject)
                {
                    <th>Action</th>
                }
            </tr>
        </thead>
        <tbody id="chapterTableBody">
            @await Html.PartialAsync("_ChapterTableRows", Model)
        </tbody>
    </table>

    <div id="paginationContainer">
        @await Html.PartialAsync("_Pagination", Model)
    </div>
}
else
{
    <div class="alert alert-info">
        No chapters found.
    </div>
}

@if (isFromSubject)
{
    <div class="mb-3">
        <a asp-page="/SubjectPages/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to subject list
        </a>
    </div>
}