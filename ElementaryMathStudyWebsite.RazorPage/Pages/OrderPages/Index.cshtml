@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.OrderPages.IndexModel

@{
	ViewData["Title"] = "Index";
	int orderNumber = 1; // Initialize the counter
}

<h1>Order</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Số thứ tự
			</th>
			<th>
				Sản phẩm
			</th>
			<th>
				Ngày mua khóa học
			</th>
			<th>
				Tổng tiền
			</th>
			<th>
				Phương thức thanh toán
			</th>
			<th>
				Trạng thái đơn hàng
			</th>
			<th>
				Hành động
			</th>
		</tr>
	</thead>
	<tbody>
		
		@foreach (var item in Model.Orders!.Items)
		{
			<tr>
				<td>
					@orderNumber
				</td>
				<td>
					@foreach (var detail in item.Details!)
					{
						<div>@detail.SubjectName</div>
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TotalPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PaymentMethod)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.OrderId">Chỉnh sửa</a> |
					<a asp-page="./Details" asp-route-id="@item.OrderId">Chi tiết</a> |
					<a asp-page="./Delete" asp-route-id="@item.OrderId">Xóa</a>
				</td>
			</tr>
			orderNumber++;
		}
	</tbody>
</table>

<div class="pagination">
	@if (Model.Orders.CurrentPage > 1)
	{
		<a asp-page="./Index" asp-route-pageNumber="@(Model.Orders.CurrentPage - 1)">Previous</a>
	}

	<span>Page @Model.Orders.CurrentPage of @Model.Orders.TotalPages</span>

	@if (Model.Orders.CurrentPage < Model.Orders.TotalPages)
	{
		<a asp-page="./Index" asp-route-pageNumber="@(Model.Orders.CurrentPage + 1)">Next</a>
	}
</div>
