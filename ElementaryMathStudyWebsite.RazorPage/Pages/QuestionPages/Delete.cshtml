@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.QuestionPages.DeleteModel

@{
    ViewData["Title"] = "Delete Question";
}

<h1 class="text-center text-danger mb-4">Delete Question</h1>

<div class="container">
    <div class="alert alert-warning text-center shadow-sm" role="alert">
        <h4 class="mb-0">Are you sure you want to delete this question?</h4>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title text-center mb-0">Question Details</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-bordered table-hover align-left">
                <thead class="table-light">
                    <tr>
                        <th>Question Context</th>
                        <th>Quiz Name</th>
                        <th>Created By</th>
                        <th>Last Updated By</th>
                        <th>Created Time</th>
                        <th>Last Updated Time</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Question.QuestionContext</td>
                        <td>@Model.Question.QuizName</td>
                        <td>@Model.Question.CreatorName</td>
                        <td>@Model.Question.LastUpdatedPersonName</td>
                        <td>@Model.Question.createdTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Model.Question.LastUpdatedTime.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <form method="post" class="d-inline" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="Question.Id" />
            <button type="submit" class="btn btn-danger btn-lg px-5">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary btn-lg px-5">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this question?");
    }
</script>
