@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.QuestionPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Option</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Option.Answer)
        </dd>
        <dt class="col-sm-2">
            Answer
        </dt>
        <dd class="col-sm-10">
            @if (Model.Option.IsCorrect)
            {
                <strong style="color: #2d8a5f;">&#10003;</strong>
            }
            else
            {
                <strong style="color: #d9534f;">&#10005;</strong>
            }
        </dd>
        <dt class="col-sm-2">
            Created time
        </dt>
        <dd class="col-sm-10">
            @(Model.Option.CreatedTime.ToString("HH:mm - dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN")))
        </dd>
        <dt class="col-sm-2">
            Last updated
        </dt>
        <dd class="col-sm-10">
            @(Model.Option.LastUpdatedTime.ToString("HH:mm - dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN")))
        </dd>
    </dl>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Option.Id" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        <form method="post" class="d-inline">
            <input type="hidden" asp-for="Option.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>

    </div>
</div>

