@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.QuestionPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="Question.QuestionContext" class="control-label"></label>
                <input asp-for="Question.QuestionContext" class="form-control" />
