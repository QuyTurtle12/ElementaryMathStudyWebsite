@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.Quiz.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger mb-4">Delete Quiz</h1>

<div class="container">
    <div class="alert alert-warning text-center shadow-sm" role="alert">
        <h4 class="mb-0">Are you sure you want to delete this quiz?</h4>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="card-title text-center mb-0">Quiz Details</h4>
        </div>
        <div class="card-body p-4">
            <table class="table table-bordered table-hover align-left">
                <thead class="table-light">
                    <tr>
                        <th>Quiz Name</th>
                        <th>Criteria</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Last Updated By</th>
                        <th>Created Time</th>
                        <th>Last Updated Time</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Quiz.QuizName</td>
                        <td>@Model.Quiz.Criteria</td>
                        <td>
                            <span class="badge @((Model.Quiz.Status == true) ? "bg-success" : "bg-secondary")">
                                @Model.Quiz.Status
                            </span>
                        </td>
                        <td>@Model.Quiz.CreatorName</td>
                        <td>@Model.Quiz.LastUpdatedPersonName</td>
                        <td>@Model.Quiz.CreatedTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Model.Quiz.LastUpdatedTime.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center gap-3">
        <form method="post" class="d-inline" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="Quiz.Id" />
            <button type="submit" class="btn btn-danger btn-lg px-5">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary btn-lg px-5">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this quiz?");
    }
</script>

