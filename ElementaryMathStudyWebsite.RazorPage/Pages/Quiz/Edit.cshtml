@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.Quiz.EditModel

@{
    ViewData["Title"] = "Edit Quiz";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-white text-center">
                    <h3 class="mb-0">Edit Quiz</h3>
                </div>
                <div class="card-body">
                    <!-- Display success or error messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }



                    <!-- Edit Form -->
                    <form method="post">
                        <!-- Quiz Name -->
                        <div class="form-group mb-4">
                            <label for="QuizName" class="form-label fw-bold">Quiz Name</label>
                            <input type="text"
                                   id="QuizName"
                                   name="QuizName"
                                   class="form-control form-control-lg"
                                   value="@Model.Quiz.QuizName"
                                   placeholder="Enter quiz name"
                                   required />
                        </div>

                        <!-- Criteria -->
                        <div class="form-group mb-4">
                            <label for="Criteria" class="form-label fw-bold">Criteria (1 - 10)</label>
                            <input type="number"
                                   id="Criteria"
                                   name="Criteria"
                                   class="form-control form-control-lg"
                                   value="@Model.Quiz.Criteria"
                                   min="1"
                                   max="10"
                                   step="1"
                                   required
                                   oninput="this.value = Math.min(Math.max(this.value, 1), 10)" />
                        </div>

                        <!-- Status -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Status</label>
                            <div>
                                <!-- Active -->
                                <div class="form-check form-check-inline">
                                    <input type="radio"
                                           id="active"
                                           name="Status"
                                           value="true"
                                           class="form-check-input"
                                    @if (Model.Quiz.Status)
                                    {
                                        @:checked
                                    } />
                                    <label class="form-check-label" for="active">Active</label>
                                </div>

                                <!-- Inactive -->
                                <div class="form-check form-check-inline">
                                    <input type="radio"
                                           id="inactive"
                                           name="Status"
                                           value="false"
                                           class="form-check-input"
                                    @if (!Model.Quiz.Status)
                                    {
                                        @:checked
                                    } />
                                    <label class="form-check-label" for="inactive">Inactive</label>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4">Save Changes</button>
                            <a href="@Url.Page("./Index")" class="btn btn-secondary btn-lg px-4 ml-3">Back To List</a>
                        </div>
                    </form>

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-4">
                            <strong>Error:</strong> Please check the form for errors.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
