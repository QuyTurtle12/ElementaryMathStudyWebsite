<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ElementaryMathStudyWebsite.RazorPage</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ElementaryMathStudyWebsite.RazorPage.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">ElementaryMathStudyWebsite.RazorPage</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div class="nav-container" style="position: relative; width: 100%;">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
							</li>
							@* <li class="nav-item"> *@
							@*     <a class="nav-link text-dark" asp-area="" asp-page="/ResultPages/Index">Result</a> *@
							@* </li> *@
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/ProgressPages/Index">Progress</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/OrderPages/Index">Order</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/UserPages/Index">User</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/PurchasePages/StudentSelect">Get a new course</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/OptionPages/Index">Edit question</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/SubjectPages/Index">Subject</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/ChapterPages/Index">Chapter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/TopicPages/Index">Topic</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/UserAnswerPages/Index">User Answer</a>
							</li>


							<!-- Cart and Settings navigator positioned on the top right -->
							<li class="nav-item cart-nav dropdown" style="position: absolute; top: 0; right: 0;">
								<!-- Shopping Cart Icon -->
								<a class="nav-link text-dark d-inline-block" asp-area="" asp-page="/PurchasePages/Cart">
									<i class="fas fa-shopping-cart"></i>
								</a>
								<!-- Gear Icon -->
								<a class="nav-link text-dark d-inline-block dropdown-toggle" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fas fa-gear"></i>
								</a>
								<!-- Dropdown Menu -->
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown">
									<li><a class="dropdown-item" asp-area="" asp-page="/SettingsPages/Profile">Profile</a></li>
									<li><a class="dropdown-item" asp-area="" asp-page="/SettingsPages/Preferences">Preferences</a></li>
									<li><a class="dropdown-item" asp-area="" asp-page="/SettingsPages/Logout">Logout</a></li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - ElementaryMathStudyWebsite.RazorPage - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>