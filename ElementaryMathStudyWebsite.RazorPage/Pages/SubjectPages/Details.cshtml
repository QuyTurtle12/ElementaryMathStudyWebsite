@page
@model ElementaryMathStudyWebsite.RazorPage.Pages.SubjectPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Price)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedByName
        </dd>
        <dt class="col-sm-2">
            Last Updated By
        </dt>
        <dd class="col-sm-10">
            @Model.LastUpdatedByName
        </dd>
        <dt class="col-sm-2">
            Deleted By
        </dt>
        <dd class="col-sm-10">
            @Model.DeletedByName
        </dd>
        <dt class="col-sm-2">
            Deleted Time
        </dt>
        <dd class="col-sm-10">
            @(Model.Subject.DeletedTime.HasValue ? Model.Subject.DeletedTime.ToString() : "None")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.CreatedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.CreatedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.LastUpdatedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.LastUpdatedTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
